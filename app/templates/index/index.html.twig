{% extends 'base.html.twig' %}

{% block title %}Super Shorter{% endblock %}

{% block body %}
    <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
        <a class="navbar-brand"
           href="/">
            SuperShorter
        </a>
    </nav>

    <main role="main"
          class="container">

        <div class="starter-template">
            <form action="{{ path('short-link') }}"
                  data-host="{{ domain_link }}/"
                  data-stat="{{ domain_link }}/statistic/"
                  class="js-shorter-form mb-5"
                  method="post">
                <h1>Short your url!</h1>
                <p class="lead">Just do it!</p>
                <div class="input-group mb-3  input-group-lg">
                    <div class="input-group-prepend">
                        <span class="input-group-text"
                              id="basic-addon1">Long url
                        </span>
                    </div>
                    <input name="url"
                           type="url"
                           class="form-control"
                           aria-label="Long url">
                </div>
                <div class="input-group mb-3 input-group-sm">
                    <button class="btn btn-light btn-sm"
                            type="button"
                            data-toggle="collapse"
                            data-target="#collapseOptions"
                            aria-expanded="false"
                            aria-controls="collapseOptions">
                        more
                    </button>
                </div>
                <div class="collapse mt-3 mb-3"
                     id="collapseOptions">
                    <div class="card card-body">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">You custom short name</span>
                            </div>
                            <input class="form-control"
                                   name="name"
                                   type="text"
                                   placeholder="my-short-link"
                                   aria-label="You custom short name">
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Date to expire</span>
                            </div>
                            <input class="form-control"
                                   type="date"
                                   name="expire_date"
                                   min="{{ '+1day'|date('Y-m-d') }}"
                                   aria-label="Date to expire">
                        </div>
                        <div class="input-group mb-3">
                            <div class="form-check">
                                <input class="form-check-input"
                                       type="checkbox"
                                       value="1"
                                       name="commercial"
                                       aria-label="Is commercial link"
                                       id="defaultCheck1">
                                <label class="form-check-label"
                                       for="defaultCheck1">Is commercial link</label>
                            </div>
                        </div>
                    </div>
                </div>
                <input type="hidden"
                       name="fingerprint">
                <button class="btn btn-primary btn-lg"
                        type="submit">Short!
                </button>
            </form>
            <div class="alert alert-success h-hidden js-success-alert"
                 role="alert">
            </div>
            <div class="alert alert-danger h-hidden js-error-alert"
                 role="alert">
            </div>

            <div class="js-old-links h-hidden">
                <h2>Your links</h2>
                <ul class="list-group">
                    <li class="list-group-item"></li>
                </ul>
            </div>
        </div>

    </main>
{% endblock %}
