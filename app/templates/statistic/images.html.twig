{% extends 'base.html.twig' %}

{% block title %}Images statistic!{% endblock %}

{% block body %}
    <main role="main"
          class="container">
        <div class="starter-template">
            <h1>
                Images statistic
            </h1>

            <table class="table">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Image</th>
                    <th scope="col">Count</th>
                </tr>
                </thead>
                <tbody>
                {% for k, item in items %}
                    <tr>
                        <th scope="row">{{ k + 1 }}</th>
                        <td>{{ item.image }}</td>
                        <td>{{ item.count }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </main>
{% endblock %}

